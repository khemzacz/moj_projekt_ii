    {% block javascripts %}
        <script src="{{asset('js/jquery-1.11.3.min.js')  }}"></script>
        <script src="{{asset('js/bootstrap.min.js')  }}"></script>
        <script type="text/javascript">
            $(document).ready(function(){

                function search(){

                    var title=$("#search").val(); /*wpisuje do title value z #search*/

                    if(title!=""){ /*jesli cos wpisane to*/
                        //$("#result").html("<img alt="ajax search" src='ajax-loader.gif'/>");
                        $.ajax({
                            type:"post",
                            url:"/search",
                            data:"title="+title,
                            success:function(movies) {
                                var results = "";
                                $.each(movies, function() {
                                    $.each(this, function(i, movie) {
                                         //alert(movie['idFilm'] + "," + movie["tytul"]);
                                        results += "<li><a href={{ path('film') }}"+movie['idFilm']+"/show>"+movie["tytul"]+"</a></li>";
                                    });
                                });

                                /* TO-DO searching for books, and games  */


                                $("#results").html(results);
                                //alert(results+"");
                                $("#results").css("display","block");

                            }
                        });
                    }

                }

                /*$("#button_search").click(function(){
                    search();
                });*/

                $('#search').keyup(function(e) {
                    /*if(e.keyCode == 13) {
                        search();
                    }*/
                    var s = $('#search').val();
                    if (s.length>1)
                        search();
                    else
                    {
                        results="<li></li>";
                        $("#results").html(results);
                        $("#results").css("display","block");
                    }
                });
            });
        </script>
