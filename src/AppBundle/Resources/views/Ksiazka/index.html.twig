{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ksiazka list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idksiazka</th>
                <th>Tytul</th>
                <th>Ksiazkacol</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ksiazka_show', { 'id': entity.idksiazka }) }}">{{ entity.idksiazka }}</a></td>
                <td>{{ entity.tytul }}</td>
                <td>{{ entity.ksiazkacol }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ksiazka_show', { 'id': entity.idksiazka }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ksiazka_edit', { 'id': entity.idksiazka }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ksiazka_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
